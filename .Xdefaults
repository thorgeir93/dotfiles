!URxvt.font:xft:Monaco:pixelsize=10
#URxvt*font: xft:Dejavu Sans Mono:pixelsize=13
!URxvt*font: xft:Dejavu Sans Mono:pixelsize=15

URxvt*font: xft:Dejavu Sans Mono:pixelsize=15
!URxvt*font: xft:Dejavu Sans Mono:pixelsize=35
!URxvt.font:xft:Monaco:pixelsize=11
!URxvt.font:xft:DejaVu Sans Mono:style=Book:pixelsize=14
URxvt.background:       black
URxvt.foreground:       white
URxvt.scrollBar:        false
URxvt.tintColor:        white
!URxvt.fading:           25 # make other terminals dark.
URxvt.fadeColor:        black
URxvt.shading:          100
URxvt.inheritPixmap:    true
URxvt.pointerColor:     black
URxvt.pointerColor2:    white
Xft.antialias:true
! fading: how much other terminals fade out.

*cursorColor: red

